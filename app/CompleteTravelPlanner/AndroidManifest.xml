<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.completetravelplanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <permission android:name="com.example.completetravelplanner.permission.C2D_MESSAGE"
        android:protectionLevel="signature"></permission>
    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
	<uses-permission android:name="android.permission.READ_CONTACTS"/>
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.WAKE_LOCK"/>
	<uses-permission  android:name="com.example.completetravelplanner.permission.C2D_MESSAGE"/>
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
	<uses-permission android:name="android.permission.VIBRATE"/>
	
	<uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="com.example.completetravelplanner.services.GcmBroadcastReceiver" android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.googe.android.c2dm.intent.REGISTRATION"/>
                <category android:name="com.example.completetravelplanner"/>
            </intent-filter>
        </receiver>
        <service android:name="com.example.completetravelplanner.services.GcmIntentService"></service>
        <activity
            android:name="com.example.completetravelplanner.controllers.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.CreateNewTripActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.HomeScreenActivity"
            android:label="@string/app_name" 
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.InputRegistrationCodeActivity"
            android:label="@string/title_activity_input_registration_code" 
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.ManageMembersActivity"
            android:label="@string/title_friends" 
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.ManageExpensesActivity"
            android:label="@string/expenses_title" 
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.ManageTourActivity"
            android:label="@string/manage_tour"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.AddItemActivity"
            android:label="@string/manage_tour"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
         <activity
            android:name="com.example.completetravelplanner.controllers.ChecklistActivity"
            android:label="@string/title_activity_checklist"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.AddChecklistActivity"
            android:label="@string/title_activity_checklist_add"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
         <activity
            android:name="com.example.completetravelplanner.controllers.AddLocationActivity"
            android:label="@string/title_activity_location_add"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
         <activity
            android:name="com.example.completetravelplanner.controllers.TripHistoryActivity"
            android:label="@string/trip_history_text"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.controllers.MapViewActivity"
            android:label="@string/title_map_view_activity"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name="com.example.completetravelplanner.cloudsharing.CloudSharingActivity"
            android:label="@string/title_photo_sharing"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        
          <activity android:name="com.example.completetravelplanner.cloudsharing.CustomGalleryActivity" >
            <intent-filter>
                <action android:name="luminous.ACTION_PICK" />
                <action android:name="luminous.ACTION_MULTIPLE_PICK" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
         <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC20-tevbiQqSaezitF-nGye4DyR0J941o" />
    </application>
</manifest>
