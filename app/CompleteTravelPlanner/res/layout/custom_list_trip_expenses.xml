<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:focusable="false"
    android:focusableInTouchMode="false"
    >
    
     <LinearLayout 
       android:id="@+id/list_dash_progress_relID"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="10"
       android:layout_marginTop="10dip"
       android:layout_marginBottom="10dip"
       android:layout_centerVertical="true"
       android:layout_marginRight="60dip"
       
        >
        
          <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="30dip"
			android:orientation="vertical" 
			android:paddingLeft="10dp">
            <TextView 
            android:id="@+id/list_expenses_itemName"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="14sp"
       		android:textStyle="bold"
       		android:textColor="@color/dashboard_listtext"
       		android:text="Level100" />
        	<TextView 
            android:id="@+id/list_expenses_time"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="14sp"
       		android:textStyle="bold"
       		android:textColor="@color/dashboard_listtext"
       		android:text="Level1002123423423" /> 
       		</LinearLayout>
       		
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_marginRight="30dip"
			android:orientation="vertical" >
            <TextView 
            android:id="@+id/list_expenses_amountPaid"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="14sp"
       		android:textStyle="bold"
       		android:textColor="@color/dashboard_listtext"
       		android:text="Level100" />
        	<TextView 
            android:id="@+id/list_expenses_userShare"
            android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:textSize="14sp"
       		android:textStyle="bold"
       		android:textColor="@color/dashboard_listtext"
       		android:text="Level1002123423423" />    
        </LinearLayout>
        
         
     </LinearLayout>
     
     <LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dip"
       android:layout_centerInParent="true">
        
        <ImageView 
            android:id="@+id/list_expenses_deleteBtnID"
           	android:layout_width="wrap_content"
       		android:layout_height="wrap_content" 
       		android:src="@drawable/delete"
       		 />
    </LinearLayout>
</RelativeLayout>